<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Thêm mới: RadioGroup để chọn loại kế hoạch -->
    <RadioGroup
        android:id="@+id/rgPlanType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">
        <RadioButton
            android:id="@+id/rbTravel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Du lịch"
            android:checked="true" />
        <RadioButton
            android:id="@+id/rbWork"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Làm việc" />
    </RadioGroup>

    <TextView
        android:id="@+id/tvAddTravelPlanTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Travel Plan"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/etDestination"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Destination"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/etStartDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Start Date (YYYY-MM-DD)"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/etEndDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="End Date (YYYY-MM-DD)"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/etBudget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Budget"
        android:inputType="numberDecimal"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/etTodoList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="To-Do List (comma separated)"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/etPlacesToVisit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Places to Visit (comma separated)"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnSaveTravelPlan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save Plan" />
</LinearLayout>


