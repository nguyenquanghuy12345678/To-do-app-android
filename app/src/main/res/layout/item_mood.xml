<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <TextView
        android:id="@+id/tvMoodDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2025-04-12"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvMoodType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ˜Š Happy"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvMoodDate"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/tvMoodNote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Note: Had a great day!"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvMoodType"
        android:layout_marginTop="4dp" />

</androidx.constraintlayout.widget.ConstraintLayout>