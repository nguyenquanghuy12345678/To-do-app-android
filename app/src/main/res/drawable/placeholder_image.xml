<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Hình chữ nhật nền màu xám -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#D3D3D3" /> <!-- Màu xám nhạt -->
            <corners android:radius="8dp" /> <!-- Bo góc 8dp -->
        </shape>
    </item>

    <!-- Biểu tượng ảnh ở giữa -->
    <item
        android:drawable="@android:drawable/ic_menu_gallery"
        android:gravity="center"
        android:width="48dp"
        android:height="48dp"
        android:tint="#808080" /> <!-- Màu xám đậm cho biểu tượng -->
</layer-list>